<div>
  <nav class='navbar navbar-inverse' role='navigation'>
    <div class='navbar-header'>
      <%= link_to 'Movie Management System', root_path, class: 'navbar-brand' %>
      <%= button_tag(type: 'button', class: 'navbar-toggle', 'data-toggle' => 'collapse', 'data-target' => '.navbar-menubuilder' ) do %>
        <span class='sr-only'>Toggle navigation</span>
        <span class='icon-bar'></span>
        <span class='icon-bar'></span>
        <span class='icon-bar'></span>
      <% end %>
    </div>
    <div class='collapse navbar-collapse navbar-menubuilder'>
      <ul class='nav navbar-nav pull-right'>
        <li><%= render 'layouts/search' %></li>
          <% if movie_index? %>
            <li><%= link_to 'Advanced Search', '#', id: 'show_advanced-search' %></li>
          <% end %>
        <li><%= link_to 'All Movies', movies_path %></li>
        <% if user_signed_in? %>
          <li class='active'>
            <%= link_to '#', class: 'dropdown-toggle', 'data-toggle' => 'dropdown' do %>
              <%= current_user.email %>
              <span class='glyphicon glyphicon-user pull-right'></span>
            <% end %>
            <ul class='dropdown-menu'>
              <li><%= link_to 'New Movie', new_movie_path %></li>
              <li class='divider'></li>
              <li><%= link_to 'View profile', user_path(current_user) %></li>
              <li class='divider'></li>
              <li><%= link_to 'Edit profile', edit_user_registration_path %></li>
              <li class='divider'></li>
              <li><%= link_to 'Logout', destroy_user_session_path, method: :delete  %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to 'Sign up', new_user_registration_path %></li>
          <li><%= link_to 'Login', new_user_session_path %></li>
          <li><%= link_to 'Go to Admin Panel', new_admin_user_session_path %></li>
        <% end %>
      </ul>
    </div>
  </nav>
</div>
