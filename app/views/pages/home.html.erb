<div>
  <h1>Latest:</h1>
</div>
<div>
  <% @latest.in_groups_of(3, false).each do |movie_group| %>
    <div class='row'>
      <% movie_group.each do |movie| %>
        <div class='col-md-4'>
          <%= link_to image_tag(movie.first_poster(:medium)), movie %>
          <div align='center'>
            <strong><%= title_titelize(movie.title) %></strong>
          </div>
        </div>
      <% end %>
    </div>
    <div class='pull-center'>
      <%= link_to 'View All', movies_path(filter: 'Latest'), class: 'btn btn-success' %>
    </div>
  <% end %>
</div>

