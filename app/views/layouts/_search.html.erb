<%= form_tag movies_path, method: :get, class: 'form-inline search-bar' do %>
  <div class='form-group'>
    <%= text_field_tag :search, params[:search], class: 'form-control', placeholder: 'Search Movies Here' %>
  </div>
  <%= submit_tag 'Search', class: 'btn btn-default' %>
  <div class='clearfix'></div>
  <% if movie_index? %>
    <%= link_to 'Advanced Search', '#', id: 'show_advanced-search' %>
  <% end %>
<% end %>
