<%= nested_form_for(@movie) do |f| %>
  <% if @movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
      <% @movie.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, required: true, maxlength: 150, size: 20 %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.cktext_area :description, rows: 10 %>
  </div>
  <div class="field">
    <%= f.label :trailer %><br>
    <%= f.text_field :trailer, required: true %>
  </div>

  <div>
    <%= f.fields_for :attachments do |attachment| %>
      <%= attachment.file_field :image %>
      <%= attachment.link_to_remove "Remove item" %>
    <% end %>
    <%= f.link_to_add "Add attachments", :attachments %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
