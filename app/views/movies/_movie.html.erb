<h1><%= movie_filter %>:</h1>
<div class='row'>
  <% movies.each do |movie| %>
    <div class='col-md-4 col-sm-6 col-xs-12'>
      <%= link_to image_tag(movie.first_poster(:medium), class: 'img-responsive'), movie %>
      <div class='text-center'>
        <strong><%= title_titelize(movie.title) %></strong>
        <% if movie_filter == 'Top' %>
          <div class='avg-star-rating' data-score=<%= movie.get_average_rating %>></div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<div class='pull-center'>
  <%= link_to 'View All', movies_path(filter: movie_filter), class: 'btn btn-success' %>
</div>
