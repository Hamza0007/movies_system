<h1><%= movie_filter %>:</h1>
<div class='row'>
  <% movies.each do |movie| %>
    <div class='col-md-4'>
      <%= link_to image_tag(movie.first_poster(:medium)), movie %>
      <div align='center'>
        <strong><%= title_titelize(movie.title) %></strong>
      </div>
    </div>
  <% end %>
</div>
<div class='pull-center'>
  <%= link_to 'View All', movies_path(filter: movie_filter), class: 'btn btn-success' %>
</div>
