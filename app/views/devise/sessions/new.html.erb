<div class='row'>
  <div class='col-md-6 col-md-offset-3'>
    <div class='panel panel-default'>
      <div class='panel-heading'>
        <h1 align='center'>Login</h1>
      </div>
      <div class='panel-body'>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class='field form-group'>
            <%= f.label :email %>
            <div class='clearfix'></div>
            <%= f.email_field :email, required: true, autofocus: true, class: 'form-control size-textbox', placeholder: 'Enter email' %>
          </div>

          <div class='field form-group'>
            <%= f.label :password %>
            <div class='clearfix'></div>
            <%= f.password_field :password, required: true, autocomplete: 'off', class: 'form-control size-textbox', placeholder: 'Enter password' %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class='field form-group'>
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class='actions field form-group'>
            <%= f.submit 'Log in', class: 'form-control btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class='text-center'>
<%= render 'devise/shared/links' %>
</div>
